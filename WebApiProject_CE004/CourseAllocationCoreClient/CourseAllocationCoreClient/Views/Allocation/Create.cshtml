@model CourseAllocationCoreClient.Models.Allocation

@{
    ViewData["Title"] = "Create";
}


<h4>Allocation</h4>
<hr />
<div class="table">
    <div class="row">
        <div class="col-2">
            <h2>Faculty Name</h2>
        </div>
        <div class="col-2">
            <h2>Priority1</h2>
        </div>
        <div class="col-2">
            <h2>Priority2</h2>
        </div>
        <div class="col-2">
            <h2>Priority3</h2>
        </div>
        <div class="col-2">
            <h2>Priority4</h2>
        </div>
        <div class="col-2">
            <h2>Priority5</h2>
        </div>
        
    </div>
    @foreach(var fac1 in ViewBag.facultychoices)
    {
        <div class="row">
            <div class="col-2">
                <h3>@fac1.Name</h3>
            </div>
            <div class="col-2">
                <h3>@fac1.Priority1</h3>
            </div>
            <div class="col-2">
                <h3>@fac1.Priority2</h3>
            </div>
            <div class="col-2">
                <h3>@fac1.Priority3</h3>
            </div>
            <div class="col-2">
                <h3>@fac1.Priority4</h3>
            </div>
            <div class="col-2">
                <h3>@fac1.Priority5</h3>
            </div>
        </div>
    }
</div>
<div class="table">

    <div class="row">
        <div class="col-3">Faculty Name</div>
        <div class="col-3">Subject1</div>
        <div class="col-3">Subject2</div>
    </div>
    <form asp-action="Create" method="post">
        @for (int i=0;i<ViewBag.Count;i++)
        {

            <div class="row">
                <div class="col-3">
                    <div class="form-group">
                        <label asp-for="Name">@ViewBag.facultychoices[i].Name</label>
                        <input type="hidden" asp-for="Name" value="@ViewBag.facultychoices[i].Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-3">
                    <div class="form-group">

                        <select asp-for="Subject1" class="form-control">
                            @for (int j=0;j<ViewBag.scount;j++)
                            {
                                <option value="@ViewBag.subjects[j].Name">@ViewBag.subjects[j].Name</option>
                            }
                        </select>
                        <span asp-validation-for="Subject1" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-3">
                    <div class="form-group">

                        <select asp-for="Subject2" class="form-control">
                            @for (int j = 0; j < ViewBag.scount; j++)
                            {
                                <option value="@ViewBag.subjects[j].Name">@ViewBag.subjects[j].Name</option>
                            }
                        </select>
                        <span asp-validation-for="Subject2" class="text-danger"></span>
                    </div>
                </div>
            </div>

        }

        <div class="col-3">
            <div class="form-group">
                <input type="submit" value="Allocate" class="btn btn-primary" />
            </div>
        </div>
    </form>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
