@model CourseAllocationCoreClient.Models.SemType

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<h4>SemType</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SemesterType" class="control-label"></label>
                <select asp-for="SemesterType" class="form-control">
                    <option value="odd">odd</option>
                    <option value="even">even</option>
                </select>
                <span asp-validation-for="SemesterType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Select" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
